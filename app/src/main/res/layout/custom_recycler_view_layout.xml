<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/song_artwork_image_view"
        android:layout_width="@dimen/sixty_dp_margin"
        android:layout_height="@dimen/sixty_dp_margin"
        android:paddingEnd="@dimen/five_dp_margin"
        android:paddingRight="@dimen/five_dp_margin" />

    <TextView
        android:id="@+id/song_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/song_artwork_image_view"
        android:layout_toRightOf="@id/song_artwork_image_view"
        android:paddingBottom="@dimen/ten_dp_margin"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/collection_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/song_name_text_view"
        android:layout_alignStart="@id/song_name_text_view"
        android:layout_below="@id/song_name_text_view"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/song_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/ten_dp_margin"
        android:paddingRight="@dimen/ten_dp_margin"
        android:textSize="13sp" />

</RelativeLayout>